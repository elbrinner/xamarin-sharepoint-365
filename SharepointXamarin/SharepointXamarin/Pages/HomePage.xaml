<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:template="clr-namespace:SharepointXamarin.Template"
             x:Class="SharepointXamarin.Pages.HomePage" Title="{Binding Title}">
        <ContentPage.ToolbarItems>
             <ToolbarItem Text="Cerrar" Command="{Binding CerrarCommand}">
        </ToolbarItem>
    </ContentPage.ToolbarItems>
     
    <ContentPage.Content>
     

         <Grid RowSpacing="0" ColumnSpacing="0" BackgroundColor="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


             <StackLayout Grid.Row="0">

                <Label Text="{Binding Profile.GivenName}" FontSize="40" HorizontalTextAlignment="Center"  />
                <Label Text="{Binding Profile.JobTitle}"  FontSize="14"   HorizontalTextAlignment="Center"  />

                <Label Text="Listado de mis contactos" BackgroundColor="Silver" TextColor="Maroon"></Label>
            </StackLayout>
           
               <ListView SeparatorVisibility="Default" Grid.Row="1" Grid.RowSpan="2"  ItemsSource="{Binding ListPeople}" >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <template:ListTemplate />
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
              </ListView>

           <ActivityIndicator VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" 
                            AbsoluteLayout.LayoutFlags="PositionProportional"
                           IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}"  />
            
         </Grid>

        
      
    </ContentPage.Content>
</ContentPage>